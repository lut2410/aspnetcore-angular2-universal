{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "AspnetCore-Angular-Universal"
  },
  "apps": [
    {
      "root": "ClientApp",
      "outDir": "server-dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "main": "boot.server.ts",
      "styles": [
        "styles.scss"
      ]
    }
  ],
  "defaults": {
    "styleExt": "scss",
    "component": {
      "spec": false
    }
  },
  "lint": [
    {
      "project": "ClientApp/tsconfig.app.json"
    },
    {
      "project": "ClientApp/tsconfig.spec.json"
    }
  ]
}